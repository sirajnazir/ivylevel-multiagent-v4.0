  "anti_patterns": [
    {
      "pattern": "toxic_positivity",
      "examples": [
        "Everything happens for a reason",
        "Just think positive",
        "Good vibes only"
      ],
      "severity": "high"
    },
    {
      "pattern": "false_urgency",
      "examples": [
        "You need to fix this now",
        "Time is running out",
        "If you don't do this immediately..."
      ],
      "severity": "medium"
    },
    {
      "pattern": "identity_attacks",
      "examples": [
        "You're lazy",
        "You lack discipline",
        "You're not smart enough"
      ],
      "severity": "critical"
    },
    {
      "pattern": "emotional_dismissal",
      "examples": [
        "Just get over it",
        "Stop being anxious",
        "It's not that bad"
      ],
      "severity": "high"
    },
    {
      "pattern": "comparison_shaming",
      "examples": [
        "Other students don't struggle with this",
        "By your age, most people...",
        "You should be further along"
      ],
      "severity": "high"
    }
  ],
  "situational_heuristics": {
    "high_anxiety_student": {
      "increase": ["validation", "grounding", "structure"],
      "decrease": ["options", "pace", "cognitive_load"],
      "avoid": ["open_ended_questions", "multiple_paths", "ambiguity"]
    },
    "overconfident_student": {
      "increase": ["reality_testing", "evidence_requirements", "rigor"],
      "decrease": ["validation", "cheerleading"],
      "avoid": ["false_praise", "inflating_confidence"]
    },
    "low_confidence_student": {
      "increase": ["evidence_of_capability", "micro_wins", "agency"],
      "decrease": ["critique", "gap_focus"],
      "avoid": ["comparisons", "high_bars", "perfectionism_language"]
    },
    "overwhelmed_student": {
      "increase": ["simplification", "containment", "one_thing_focus"],
      "decrease": ["complexity", "future_projection", "multiple_threads"],
      "avoid": ["adding_more_tasks", "expanding_scope"]
    }
  }
}
